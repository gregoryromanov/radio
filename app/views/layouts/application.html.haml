<!DOCTYPE html>
%html
  %head
    %title Radio
    
    = stylesheet_link_tag "application", "blitzer", "formtastic", "formtastic_changes"
    = javascript_include_tag "jquery", "jquery-ui", "application" , "rails"
    = csrf_meta_tag
  
  %body
    #wrapper
      #header
        #logo
          %h1
            <a href="/">IMI's Tech Talk</a>
          %p educating the masses one byte at a time
          
      <!-- end #header -->
      #menu
        %ul
          - if current_user
            = raw layout_menu_item("Episodes", :episodes)
          - if current_user and current_user.admin_or_host?
            = raw layout_menu_item("Pitches", :pitches)
            = raw layout_menu_item("Users", :users)
            = raw layout_menu_item("Conferences", :conferences)
          = raw layout_menu_item("About", :about)
          = raw layout_menu_item("Contact", :contact)
          - if current_user
            =raw layout_menu_item("Logout", :logout)
          - else 
            =raw layout_menu_item("Login", :login)

      <!-- end #menu -->
      #page
        #page-bgtop
          #page-bgbtm
            #content
              - flash.each do |key, message|
                - if key == :notice
                  - key = :highlight
                - elsif key == :alert
                  - key = :error
                .ui-widget
                  %div{:class => "ui-state-#{key} ui-corner-all flash_message", :id => "flash_#{key}"}
                    %p
                      - if key == :error
                        %span.ui-icon.ui-icon-alert{:style => "float:left; margin-right: .3em;"}
                      - else
                        %span.ui-icon.ui-icon-info{:style => "float:left; margin-right: .3em;"}
                        
                      = message
                      
              
              = yield 
  			      
      <!-- end #content -->
      - if current_user
        #sidebar
          %ul
            %li
              %h2 Recent and Upcoming Shows
              %ul
                - Episode.limit(4).each do |episode|
                  %li= link_to episode.shortened_title, episode, :class => "truncate"
              
      <!-- end #sidebar -->
      <div style="clear: both;">&nbsp;</div>
  		
    <!-- end #page -->
    #footer
      %p
        Copyright (c) 2011 Information Methods Inc. All rights reserved. Design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.

    <!-- end #footer -->